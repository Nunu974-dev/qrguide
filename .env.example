# ===========================
# STRIPE - Backend uniquement
# ===========================
# Clé secrète Stripe (récupérez-la sur https://dashboard.stripe.com/test/apikeys)
STRIPE_SECRET_KEY=sk_test_VOTRE_CLE_SECRETE_ICI

# Port du serveur (Render.com utilise automatiquement process.env.PORT)
PORT=3000

# Webhook secret (pour recevoir les confirmations de paiement et envoyer email auto)
STRIPE_WEBHOOK_SECRET=whsec_VOTRE_WEBHOOK_SECRET

# ===========================
# EMAILJS - Pour envoi automatique d'emails (GRATUIT 200/mois)
# ===========================
# Récupérez ces valeurs sur https://dashboard.emailjs.com
EMAILJS_PUBLIC_KEY=VOTRE_PUBLIC_KEY
EMAILJS_PRIVATE_KEY=VOTRE_PRIVATE_KEY
EMAILJS_SERVICE_ID=VOTRE_SERVICE_ID
EMAILJS_TEMPLATE_ID=VOTRE_TEMPLATE_ID

